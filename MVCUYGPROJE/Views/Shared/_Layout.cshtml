    <script>
        $(document).ready(function () {
            $('.availability-Checkbox').change(function () {
                var id = $(this).closest('tr').find('.book-id').val();  // Gizli alandan ID'yi alıyoruz
                var isAvailable = $(this).prop('checked');

                console.log("Checkbox changed: ID =", id, "IsAvailable =", isAvailable);

                $.ajax({
                    url: '@Url.Action("UpdateAvailability", "Book")',
                    method: 'POST',
                    data: {
                        bookId: id,
                        isbookAvailable: isAvailable
                    },
                    success: function (response) {
                        if (response.success) {
                            alert('Success');
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error: ' + error);
                    }
                });
            });
        });
    </script>
  
