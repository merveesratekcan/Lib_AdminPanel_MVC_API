@model MVCUYGPROJE.Areas.Admin.Models.BookVMs.AdminBookUpdateVM

@{
    ViewData["Title"] = "Update Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Update Book</h1>
    <form asp-action="Update">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Id">Book ID</label>
            <input asp-for="Id" class="form-control custom-form-control" readonly />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Book Name</label>
            <input asp-for="Name" class="form-control custom-form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfPublish">Publish Date</label>
            <input asp-for="DateOfPublish" type="date" class="form-control custom-form-control" />
            <span asp-validation-for="DateOfPublish" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input asp-for="IsAvailable" class="form-check-input" id="availableCheck" />
            <label class="form-check-label" for="availableCheck">@Html.DisplayNameFor(model => model.IsAvailable)</label>
        </div>
        <div class="form-group">
            <label>Author</label>
            <select asp-for="AuthorId" asp-items="@Model.Authors" class="form-control custom-form-control">
                <option value="">--- Select Author ---</option>
            </select>
        </div>
        <div class="form-group">
            <label>Category</label>
            <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-control custom-form-control">
                <option value="">--- Select Category ---</option>
            </select>
        </div>
        <div class="form-group">
            <label>Publisher</label>
            <select asp-for="PublisherId" asp-items="@Model.Publishers" class="form-control custom-form-control">
                <option value="">--- Select Publisher ---</option>
            </select>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-animate">Save Changes</button>
        </div>
    </form>
    <br />
    <a asp-action="Index" class="btn btn-info btn-animate">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}